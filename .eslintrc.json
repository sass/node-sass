{
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {},
  "extends": "eslint:recommended",
  "overrides": [
    {
      "files": [
        "test/**/*.js"
      ],
      "env": {
        "mocha": true
      }
    }
  ],
  "rules": {
    "no-bitwise": 2,
    "curly": 2,
    "eqeqeq": 2,
    "no-unused-expressions": [
      2,
      {
        "allowTernary": true
      }
    ],
    "wrap-iife": [
      2,
      "any"
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": 2,
    "no-multi-str": 2,
    "new-cap": 2,
    "no-caller": 2,
    "quotes": [
      2,
      "single"
    ],
    "semi": 2,
    "block-scoped-var": 2
  }
}
